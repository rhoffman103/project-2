<div class="main container row">

    <!-- =====SIDE NAV===== -->
    <div id="side-nav" class="col m3">
        <h5>Filter Posts</h5>
        <hr>
        <form>
            <h6>Location:</h6>
            <input id="side-nav-location" type="text" placeholder="Zip Code">
            <h6>Serch Topics:</h6>
            <select id="topic-filter">
                <option value="" disabled selected>Topics</option>
                <option value="1">Sports</option>
                <option value="2">Movies</option>
                <option value="3">Food</option>
            </select>
            <h6>Rating:</h6>
            <select id="rating-filter">
                <option value="" disabled selected>Choose Rating</option>
                <option value="1">Best to Worst</option>
                <option value="2">Worst to Best</option>
            </select>

            <!-- SEARCH BOX -->
            <h6>Search Usernames:</h6>
            <div class="search-div">
                <input class="search-text" type="text" placeholder="Filter User Names">
                <ul class="userNameList"></ul>
            </div>
        </form>
        <button class="btn waves-effect waves-light" id="side-search" <!-- name="action" -->>Search</button>
    </div>
    <!-- ==^^^SIDE NAV^^^== -->
    {{!-- POST FEED --}}
    <div id="post-feed" class="col m9">

        {{!-- SIGN UP --}}
        {{#if signMeUp}}
            {{> signup}}
        {{/if}}

        <!-- =====CREATE POST===== -->
        {{#unless signMeUp}}
            {{#if loggedIn}}
                <div class="post add-post animated fadeInUp">
                    <h5>Add Your Post</h5>
                    <form>
                        <div class="row">
                            <div class="col m7">
                                <select id="topics" multiple>
                                    <option value="" disabled selected>Topics</option>
                                    <option value="1">Sports</option>
                                    <option value="2">Movies</option>
                                    <option value="3">Food</option>
                                </select>
                            </div>
                            <div class="input-field col m5">
                                <input placeholder="" id="zip" type="text" class="validate">
                                <label for="zip">zip</label>
                            </div>
                        </div>
                        <div class="input-field">
                            <textarea id="textarea2" class="materialize-textarea" data-length="313"></textarea>
                            <label for="textarea2">What's on your mind?</label>
                        </div>
                    </form>
                    <button class="btn waves-effect waves-light" id="submit-post">Post me</button>
                </div>
            {{/if}}
        {{/unless}}
        <!-- ==^^^CREATE POST^^^== -->

        {{!-- POSTS --}}
        <div class="all-posts">
            <h5>What's In Your Feed?</h5>
            {{#if findPosts}}
                    <h2>All Posts</h2>
            {{/if}}
            {{#if postsByZip}}
                <h2>Posts In {{zip}}</h2>
            {{/if}}
            {{#if findUser}}
                <h2>{{user}}'s Posts</h2>
            {{/if}}
            {{#if postsByTag}}
                <h2>#{{tag}}</h2>
            {{/if}}
            {{#if tagAndZip}}
                <h2>#{{tag}} in {{zip}}</h2>
            {{/if}}
            {{#if postsByTag}}
                {{> postsByTag}}
                {{#else}}
                    {{> posts}}
                {{/else}}
            {{/if}}
        </div>
    </div>


